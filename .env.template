# .env template for Phoenix runner local development
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git!

# GitHub Personal Access Token for your personal repository
# Required scopes: repo, workflow
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_token_here

# Repository URL for the Phoenix project
PHOENIX_REPO_URL=https://github.com/twimprine/YOUR_REPO_NAME

# Optional: Runner configuration
RUNNER_NAME_PREFIX=phoenix-k8s
RUNNER_LABELS=kubernetes,talos,cilium,homelab,arm64,phoenix

# Optional: Kubernetes configuration
KUBE_NAMESPACE=github-actions
KUBE_CONTEXT=default

# Optional: Security settings
RUNNER_EPHEMERAL=true
RUNNER_ALLOW_RUNASROOT=true
